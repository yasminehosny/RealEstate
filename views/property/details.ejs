<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Property Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .carousel-item img {
      object-fit: cover;
      height: 80vh;
      width: 100%;
    }
    
    .container2 {
      width: 100%;
      max-width: 600px;
      margin: 30px auto;
      display: none;
      opacity: 0;
      transition: opacity 0.5s ease-out;
      position: absolute;  
      top: 130%;
      left: 50%;  
      transform: translate(-50%, -50%); 
    }
    .styled-div2 {
      background: linear-gradient(135deg, #f7f7f7, #345475); 
      padding: 40px;
      border-radius: 25px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.8); 
      text-align: center;
      animation: slideDown 1s ease-out;
      width: 100%;
    }
    .styled-div2:hover {
      transform: scale(1.03);
      box-shadow: 0 30px 70px rgba(0, 0, 0, 0.8);
    }
    
    @keyframes slideDown {
      0% {
        opacity: 0;
        transform: translateY(-600px); 
      }
      40% {
        opacity: 0;
        transform: translateY(-300px); 
      }
      100% {
        opacity: 1;
        transform: translateY(0); 
      }
    }

    
    .form-group2 label {
      font-size: 1rem;
      color: #555;
      font-weight: 500;
      margin-bottom: 10px;
    }
    .form-control2 {
      padding: 16px;
      font-size: 1rem;
      border-radius: 15px;
      border: 1px solid #b0b0b0;
      margin-bottom: 25px;
      background-color: #fff;
      color: #333;
      transition: all 0.3s ease;
    }
    .form-control2:focus {
      border-color: #888;
      box-shadow: 0 0 15px rgba(136, 136, 136, 0.5);
    }
   
    .appointmentbtn {
      width: 43%;
      padding: 16px;
      background-color: #007bff;
      color: white;
      border: none;
      font-size: 18px;
      font-weight: bold;
      text-transform: uppercase;
      border-radius: 15px;
      transition: all 0.4s ease;
      transform: scale(0.98);
    }
    .appointmentbtn:hover {
      background-color: #0056b3;
      transform: scale(1.05);
    }
    .appointmentbtn:active {
      transform: scale(0.98);
    }
    
    #bookingMessage {
      margin-top: 20px;
      display: none;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container my-5">
    <div class="row mb-4 text-center">
      <div class="col">
        <h1 class="display-5 p-2 rounded-3 text-white" id="propertyTitle" style="background-color: #2c3e50;">Property Details</h1>
        <p class="text-muted" id="propertyAddress" style="color: #5079a1;"><%= property.address %></p>
      </div>
    </div>

    <!-- Carousel for Property Images -->
    <div id="propertyCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
      <div class="carousel-inner" id="carouselImages">
        <% property.images.forEach((image, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="/uploads/<%= image %>"class="d-block w-100 img-fluid" alt="Property Image <%= index + 1 %>">
          </div>
        <% }); %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!-- Property Details -->
    <div class="row mb-4">
      <div class="col-md-6">
        <h4>Property Details</h4>
        <ul class="list-group" id="propertyDetails">
          <li class="list-group-item">Price: <strong>$<%= property.price %></strong></li>
          <li class="list-group-item">Area: <strong><%= property.area %> sq ft</strong></li>
          <li class="list-group-item">Bedrooms: <strong><%= property.number_of_rooms %></strong></li>
          <li class="list-group-item">Bathrooms: <strong><%= property.number_of_bathroom %></strong></li>
          <li class="list-group-item">Status: <strong><%= property.status %></strong></li>
        </ul>
      </div>
      <div class="col-md-6">
        <h4>Description</h4>
        <p id="propertyDescription"><%= property.description %></p>
      </div>
    </div>

    <div class="d-flex justify-content-end gap-3 mt-4">
      <button id="bookNowBtn" class="btn btn-lg btn-animated2 text-white" style="background-color: #2c4661;">
        Book Now
      </button>
     
     <a href="/go-to-chat/<%= property._id %>" class="btn btn-warning">chat</a>



    </div>
  </div>
  
  
  <div id="bookingContainer" class="container2" style="display:none;">
    <div class="styled-div2">
      <form id="bookingForm">
        <div class="form-group2">
          <label for="datetime">Choose Date & Time</label>
          <input type="datetime-local" id="datetime" name="datetime" class="form-control2" >
        </div>
        <button type="submit" class="appointmentbtn">Send Booking</button>
      </form>
      <div id="bookingMessage" style="display:none; color: green;"></div>
    </div>
  </div>
  <div class="container2 " id="chatContainer">
  <div class="styled-div2">
    <h3>Chat with Owner</h3>
    <div class="border rounded p-3 mb-3" id="chatBox" style="height: 300px; overflow-y: auto; background-color: #f8f9fa;"></div>
    <div class="input-group">
      <input type="text" class="form-control" id="chatInput" placeholder="Type a message...">
      <button class="btn bg-warning" id="sendMessage">Send</button>
    </div>
  </div>
</div>
<script>
  const userID = "<%= userID %>";
  const propertyID = "<%= property._id %>";

  document.getElementById("bookNowBtn").addEventListener("click", () => {
    const c = document.getElementById("bookingContainer");
    c.style.display = "block";
    setTimeout(() => c.style.opacity = "1", 10);
  });
  document.addEventListener("click", function (event) {
    const target = event.target;

    // لو ديف البوكنج ظاهر
    if (bookingContainer.style.display === "block") {
      // لو الضغط مش على زر Book Now أو جوه ديف البوكنج نفسه
      if (
        !bookingContainer.contains(target) &&
        !bookNowBtn.contains(target)
      ) {
        bookingContainer.style.opacity = "0";
        setTimeout(() => {
          bookingContainer.style.display = "none";
        }, 300); // تخليه يختفي بعد الـ opacity ما تنزل
      }
    }
  });
  document.getElementById("bookingForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const datetime = document.getElementById("datetime").value;
    if (!datetime) {
      return alert('Please choose a date and time.');
    }

    const selectedDate = new Date(datetime);
    const now = new Date();

    if (selectedDate <= now) {
      return alert('You cannot select a past date/time. Please choose a future time.');
    }

    fetch('/book', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ datetime, userID, propertyID })
    })
    .then(response => response.json())
    .then(data => {
      const messageDiv = document.getElementById('bookingMessage');
      messageDiv.style.display = 'block';
      messageDiv.textContent = data.message;
      messageDiv.style.color = data.success ? 'green' : 'red';

      setTimeout(() => messageDiv.style.display = 'none', 3000);
    })
    .catch(error => {
      console.error('Error:', error);
    });
  });
   openChat.addEventListener("click", function() {
    chatContainer.style.display = "block";
    chatContainer.style.opacity = "1";
  });
</script>


  

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
