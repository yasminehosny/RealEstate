<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>محادثات المالك</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .client-item img {
      width: 45px;
      height: 45px;
      object-fit: cover;
      border-radius: 50%;
      margin-left: 10px;
    }
    .client-item {
      transition: background 0.2s;
    }
    .client-item:hover {
      background-color: #f0f0f0;
      cursor: pointer;
    }
  </style>
  <link rel="stylesheet" href="/chat.css">
</head>
<body>
  <div class="container py-4">
    <h2 class="mb-4 text-center">Remaining real estate clients</h2>
    <div class="list-group">
      <% clients.forEach(c => { %>
        <a href="/chat/<%= c.property._id %>?clientId=<%= c.client._id %>" class="list-group-item list-group-item-action d-flex align-items-center client-item">
         <img src="/uploads/<%= c.client.image || 'default-avatar.png' %>" alt="صورة العميل" class="rounded-circle me-3" width="40" height="40">

          <div>
            <strong><%= c.client.username %></strong><br>
            <small class="text-muted">property: <%= c.property.address %></small>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</body>
</html>
