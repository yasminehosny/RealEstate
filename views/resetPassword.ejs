<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(#e8eaf6, #c5cae9);
      display: flex; justify-content: center; align-items: center;
      height: 100vh; margin: 0;
    }
    .container {
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      width: 100%; max-width: 400px;
    }
    input, button {
      width: 100%; padding: 12px;
      margin-top: 10px; border: 1px solid #ccc; border-radius: 8px;
    }
    button {
      background-color: #2980b9; color: white;
      font-weight: bold; cursor: pointer; transition: 0.3s;
    }
    button:hover {
      background-color: #21618c;
    }
    .error {
      color: red; font-size: 14px;
      margin-top: 5px;
    }
    .error-message {
  color: red;
  text-align: center;
  margin-bottom: 10px;
  font-weight: bold;
}
  </style>
</head>
<body>
  <div class="container">
    <h2>Reset Your Password</h2>
    

    <form id="resetForm" action="/resetPassword" method="POST">
      <input type="password" id="password" name="password" placeholder="New Password" required>
      <div id="error" class="error"></div>
      <button type="submit">Reset Password</button>
    </form>
  </div>

  <script>
    const form = document.getElementById('resetForm');
    const password = document.getElementById('password');
    const errorDiv = document.getElementById('error');

    form.addEventListener('submit', function(e) {
      const pwd = password.value;

      const valid = pwd.length >= 8 &&
                    /[a-zA-Z]/.test(pwd) &&
                    /\d/.test(pwd) &&
                    /[!@#$%^&*]/.test(pwd);

      if (!valid) {
        e.preventDefault();
        errorDiv.textContent = "Password must be at least 8 characters and include letters, numbers, and a special character.";
      }
    });
  </script>
</body>
</html>
